<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.dmitry.hws_android_school.ui.hw3_menu.HW3MenuFragment">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center">

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:columnCount="2">

            <Button
                android:id="@+id/linear_button"
                android:layout_width="@dimen/grid_button_width"
                android:layout_height="wrap_content"
                android:layout_gravity="fill"
                android:text="@string/linear_button"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/relative_button"
                android:layout_width="@dimen/grid_button_width"
                android:layout_height="wrap_content"
                android:layout_gravity="fill"
                android:text="@string/relative_button"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/frame_button"
                android:layout_width="@dimen/grid_button_width"
                android:layout_height="wrap_content"
                android:layout_gravity="fill"
                android:text="@string/frame_button"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/grid_button"
                android:layout_width="@dimen/grid_button_width"
                android:layout_height="wrap_content"
                android:layout_gravity="fill"
                android:text="@string/grid_button"
                android:textAllCaps="false" />

        </GridLayout>

    </ScrollView>

</LinearLayout>
